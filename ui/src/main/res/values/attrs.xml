<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--倒计时控件-->
    <declare-styleable name="TimerButton">

        <attr name="formatText" format="string"/>
        <attr name="finishedText" format="string"/>
        <attr name="startedTextColor" format="color"/>
        <attr name="time" format="integer"/>
        <attr name="startedBackground" format="reference"/>

    </declare-styleable>


    <!--Banner-->
    <declare-styleable name="Banner">
        <attr name="banner_auto_play" format="boolean" />
        <attr name="banner_multi_page" format="boolean" />
        <attr name="banner_interval_time" format="integer" />
        <attr name="banner_scroll_time" format="integer" />
        <attr name="banner_expose_width" format="dimension" />
        <attr name="banner_page_spacing" format="dimension" />
        <attr name="banner_show_indicator" format="boolean" />
        <attr name="banner_default_image" format="reference" />
        <attr name="indicator_select_width" format="dimension" />
        <attr name="indicator_default_width" format="dimension" />
        <attr name="indicator_select_height" format="dimension" />
        <attr name="indicator_default_height" format="dimension" />
        <attr name="indicator_space" format="dimension" />
        <attr name="indicator_margin_bottom" format="dimension" />
        <attr name="indicator_select_drawable" format="reference" />
        <attr name="indicator_default_drawable" format="reference" />
        <attr name="banner_single_anim" format="enum">
            <enum name="Default" value="0" />
            <enum name="Accordion" value="1" />
            <enum name="BackgroundToForeground" value="2" />
            <enum name="ForegroundToBackground" value="3" />
            <enum name="CubeIn" value="4" />
            <enum name="CubeOut" value="5" />
            <enum name="DepthPage" value="6" />
            <enum name="FlipHorizontal" value="7" />
            <enum name="FlipVertical" value="8" />
            <enum name="RotateDown" value="9" />
            <enum name="RotateUp" value="10" />
            <enum name="ScaleInOut" value="11" />
            <enum name="Stack" value="12" />
            <enum name="Tablet" value="13" />
            <enum name="ZoomIn" value="14" />
            <enum name="ZoomOut" value="15" />
            <enum name="ZoomOutSlide" value="16" />
        </attr>
        <attr name="banner_multi_anim" format="enum">
            <enum name="Alpha" value="0" />
            <enum name="Non" value="1" />
            <enum name="RotateDown" value="2" />
            <enum name="RotateUp" value="3" />
            <enum name="RotateY" value="4" />
            <enum name="ScaleIn" value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="showDefaultBackIcon" format="boolean"/>
        <attr name="padding" format="dimension"/>

        <!--标题-->
        <attr name="titleText" format="string"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleTextColor" format="color"/>

        <!--左部-->
        <attr name="leftText" format="string"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftTextColor" format="color"/>
        <attr name="leftTextDrawableLeft" format="reference"/>
        <attr name="leftTextDrawableRight" format="reference"/>
        <attr name="leftTextDrawablePadding" format="dimension"/>
        <attr name="leftImage" format="reference"/>

        <!--右部-->
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="rightTextDrawableLeft" format="reference"/>
        <attr name="rightTextDrawableRight" format="reference"/>
        <attr name="rightTextDrawablePadding" format="dimension"/>
        <attr name="rightImage" format="reference"/>
    </declare-styleable>

</resources>